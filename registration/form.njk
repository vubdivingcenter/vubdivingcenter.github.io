<script>
document.getElementById('registrationForm').addEventListener('submit', function(e) {
  let valid = true;

  // Helper function
  function setError(id, message) {
    const input = document.getElementById(id);
    if (input) input.classList.add('error');
    document.getElementById('error-' + id).textContent = message;
    valid = false;
  }
  function clearError(id) {
    const input = document.getElementById(id);
    if (input) input.classList.remove('error');
    document.getElementById('error-' + id).textContent = '';
  }

  // Validate required text fields
  ['voornaam','achternaam','straat','nummer','postcode','stad','telefoon','geboortedatum'].forEach(id => {
    const el = document.getElementById(id);
    if (el && !el.value.trim()) {
      setError(id, 'Dit veld is verplicht.');
    } else {
      clearError(id);
    }
  });

  // Email validation
  const email = document.getElementById('email');
  if (!email.value.trim()) {
    setError('email', 'E-mail is verplicht.');
  } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)) {
    setError('email', 'Ongeldig e-mailadres.');
  } else {
    clearError('email');
  }

  // Postcode validation (Belgium: 4 digits)
  const postcode = document.getElementById('postcode');
  if (postcode.value && !/^\d{4}$/.test(postcode.value)) {
    setError('postcode', 'Postcode moet 4 cijfers zijn.');
  }

  // Telefoon validation (simple international format)
  const telefoon = document.getElementById('telefoon');
  if (telefoon.value && !/^(\+?\d{1,3}[- ]?)?\d{6,14}$/.test(telefoon.value)) {
    setError('telefoon', 'Ongeldig telefoonnummer.');
  }

  // Land dropdown
  const land = document.getElementById('land');
  if (!land.value) {
    setError('land', 'Selecteer een land.');
  } else {
    clearError('land');
  }

  // Handicap dropdown
  const handicap = document.getElementById('handicap');
  if (!handicap.value) {
    setError('handicap', 'Selecteer een optie.');
  } else {
    clearError('handicap');
  }

  // Geslacht dropdown
  const geslacht = document.getElementById('geslacht');
  if (!geslacht.value) {
    setError('geslacht', 'Selecteer geslacht.');
  } else {
    clearError('geslacht');
  }

  // Optie dropdown
  const optie = document.getElementById('optie');
  if (!optie.value) {
    setError('optie', 'Selecteer een optie.');
  } else {
    clearError('optie');
  }

  // Geboortedatum: must be in the past
  const geboortedatum = document.getElementById('geboortedatum');
  if (geboortedatum.value) {
    const today = new Date();
    const dob = new Date(geboortedatum.value);
    if (dob >= today) {
      setError('geboortedatum', 'Geboortedatum moet in het verleden liggen.');
    }
  }

  // Checkbox group (Verklaringen)
  const verklaringen = document.querySelectorAll('input[name="entry.1721077263"]:checked');
  if (verklaringen.length < 2) {
    document.getElementById('error-verklaring').textContent = 'Beide verklaringen moeten aangevinkt zijn.';
    valid = false;
  } else {
    document.getElementById('error-verklaring').textContent = '';
  }

  if (!valid) {
    e.preventDefault();
    // Scroll to first error
    const errorMessages = document.querySelectorAll('.error-message');
    for (let i = 0; i < errorMessages.length; i++) {
      if (errorMessages[i].textContent) {
        errorMessages[i].scrollIntoView({ behavior: 'smooth', block: 'center' });
        break;
      }
    }
    return;
  }

  e.preventDefault();

  const form = e.target;
  const formData = new FormData(form);

  // Hide previous messages
  document.getElementById('form-success').style.display = 'none';
  document.getElementById('form-error').style.display = 'none';

  fetch(form.action, {
    method: 'POST',
    body: formData,
    mode: 'no-cors' // Google Forms does not support CORS, so we can't read the response
  })
  .then(() => {
    form.style.display = 'none';
    document.getElementById('form-success').style.display = 'block';
  })
  .catch(() => {
    form.style.display = 'none';
    document.getElementById('form-error').style.display = 'block';
  });
});
</script>
