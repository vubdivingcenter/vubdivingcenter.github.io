  <h2>Er is een fout opgetreden</h2>
  <p>Uw formulier kon niet worden verzonden. Probeer het later opnieuw of neem contact op via <a href="mailto:info@vubdivingcenter.be">info@vubdivingcenter.be</a>.</p>
</div>

<script>
document.getElementById('registrationForm').addEventListener('submit', function(e) {
  let valid = true;

  // Helper function
  function setError(id, message) {
    const input = document.getElementById(id);
    if (input) input.classList.add('error');
    document.getElementById('error-' + id).textContent = message;
    valid = false;
  }
  function clearError(id) {
    const input = document.getElementById(id);
    if (input) input.classList.remove('error');
    document.getElementById('error-' + id).textContent = '';
  }

  // Validate required text fields
  ['voornaam','achternaam','telefoon'].forEach(id => {
    const el = document.getElementById(id);
    if (el && !el.value.trim()) {
      setError(id, 'Dit veld is verplicht.');
    } else {
      clearError(id);
    }
  });

  // Email validation
  const email = document.getElementById('email');
  if (!email.value.trim()) {
    setError('email', 'E-mail is verplicht.');
  } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)) {
    setError('email', 'Ongeldig e-mailadres.');
  } else {
    clearError('email');
  }

  // Telefoon validation (simple international format)
  const telefoon = document.getElementById('telefoon');
  if (telefoon.value && !/^(\+?\d{1,3}[- ]?)?\d{6,14}$/.test(telefoon.value)) {
    setError('telefoon', 'Ongeldig telefoonnummer.');
  }

  if (!valid) {
    e.preventDefault();
    // Scroll to first error
    const errorMessages = document.querySelectorAll('.error-message');
    for (let i = 0; i < errorMessages.length; i++) {
      if (errorMessages[i].textContent) {
        errorMessages[i].scrollIntoView({ behavior: 'smooth', block: 'center' });
        break;
      }
    }
    return;
  }

  e.preventDefault();

  const form = e.target;
  const formData = new FormData(form);

  // Hide previous messages
  document.getElementById('form-success').style.display = 'none';
  document.getElementById('form-error').style.display = 'none';

  fetch(form.action, {
    method: 'POST',
    body: formData,
    mode: 'no-cors' // Google Forms does not support CORS, so we can't read the response
  })
  .then(() => {
    form.style.display = 'none';
    document.getElementById('form-success').style.display = 'block';
  })
  .catch(() => {
    form.style.display = 'none';
    document.getElementById('form-error').style.display = 'block';
  });
});
</script>
